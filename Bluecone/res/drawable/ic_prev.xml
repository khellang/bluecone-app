<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- When enabled; selected, use yellow -->
    <item android:drawable="@drawable/prev_selected"
          android:state_pressed="true" />
       <!-- Default mode NOT ENABLED; use grey -->
    <item android:drawable="@drawable/prev_deactivated" 
    		android:state_enabled="false"/>
     <!-- When not selected, use blue-->
    <item android:drawable="@drawable/prev_unselected" />
   
</selector>